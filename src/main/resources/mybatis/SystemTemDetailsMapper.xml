<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.libbytian.pan.system.mapper.SystemTemDetailsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.libbytian.pan.system.model.SystemTemDetailsModel">
        <id column="templatedetails_id" property="temdetailsId" />
        <result column="templatedetails_keyword" property="keyword" />
        <result column="templatedetails_value" property="keywordToValue" />
        <result column="createtime" property="createtime" />
        <result column="show_order" property="showOrder" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
         td.templatedetails_id AS temdetailsId,
         td.templatedetails_keyword AS keyword,
         td.templatedetails_value AS keywordToValue,
         td.createtime AS createtime,
         td.show_order AS showOrder
    </sql>


    <select id="getTemDetails" parameterType="com.libbytian.pan.system.model.SystemTemplateModel" resultType="com.libbytian.pan.system.model.SystemTemDetailsModel">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_temdetails td
        LEFT JOIN tem_temdetails tt ON td.templatedetails_id = tt.templatedetails_id
        LEFT JOIN sys_template t ON tt.template_id = t.template_id
        <trim prefix="where" prefixOverrides="and|">
            <if test="templateid != null and templateid != ''">
                AND t.template_id =#{templateId}
            </if>
            <if test="templatename != null and templatename != ''">
                AND t.template_name =#{templatename}
            </if>
            <if test="templatestatus != null and templatestatus != ''">
                AND t.template_status =#{templatestatus}
            </if>
            ORDER BY td.templatedetails_status
            DESC,
            td.createtime
            DESC
        </trim>

    </select>


</mapper>
